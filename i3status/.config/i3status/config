general {
	#output_format = "i3bar"
	colors = true
	interval = 1
}

order += "disk /"
order += "disk /home/oliva/Data"
#order += "wireless wlp1s0"
order += "ethernet br0"
order += "ethernet tun-ktk"
order += "ethernet wg"
#order += "cpu_usage"
#order += "memory"
#order += "load"
order += "read_file PSI"
order += "volume master"
#order += "battery all"
order += "tztime local"

disk / {
	format = "/: %avail"
	low_threshold = 10
	threshold_type = "percentage_avail"
	separator = false
	separator_block_width = 16
}

disk /home/oliva/Data {
	format = "Data: %avail"
	low_threshold = 5
	threshold_type = "percentage_avail"
	separator = false
	separator_block_width = 16
}

wireless wlp1s0 {
	format_up = "%essid %quality: %ip"
	format_down = "W"
	separator = false
	separator_block_width = 16
}

ethernet br0 {
	# if you use %speed, i3status requires root privileges
	format_up = "E: %ip"
	format_down = "E"
	separator = false
	separator_block_width = 16
}

ethernet tun-ktk {
	format_up = "KTK"
	format_down = "KTK"
	separator = false
	separator_block_width = 16
}

ethernet wg {
	format_up = "WG"
	format_down = "WG"
	separator = false
	separator_block_width = 16
}

cpu_usage {
	format = "C %usage"
	separator = false
	separator_block_width = 16
}

memory {
	format = "M: %free"
	threshold_degraded = 15%
	threshold_critical = 5%
	separator = false
	separator_block_width = 16
}

load {
	format = "%1min"
	max_threshold = "6"
	separator = false
	separator_block_width = 16
}

read_file PSI {
	format = "%content"
	path = "/run/user/5471/psi_mon"
	color_good= "#FFFFFF"
	separator = false
	separator_block_width = 16
}

volume master {
	format = "ðŸ”ˆ %volume"
	format_muted = "ðŸ”‡ %volume"
#	format = "%volume"
#	format_muted = "%volume"
	color_degraded = "#FF7F7F"
	device = "pulse"
	separator = false
	separator_block_width = 16
}

battery all {
	format = "%status %percentage %remaining"
	format_down = ""
	status_chr = "âš¡"
#	status_chr = "C"
	status_bat = "ðŸ”‹"
#	status_bat = "B"
	status_unk = "? "
	status_full = "ðŸ”Œ"
#	status_full = "AC"
	last_full_capacity = true
	hide_seconds = true
	integer_battery_capacity = true
	separator = false
	separator_block_width = 16
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
	separator = false
	separator_block_width = 16
}
