[color]
	diff = auto
	status = auto
	branch = auto

[user]
	name = Temlin Oliv√©r
	email = git@teml.in

[alias]
	co = commit
	com = commit
	a  = add -Av .
	d  = diff --stat --base
	l  = log --oneline --graph
	st = status --short --column=auto
	ls = ls-files
	shallow = clone --depth 1

[core]
	excludesfile = /home/oliva/.gitignore_global
	autocrlf = input

[receive]
	denyCurrentBranch = updateInstead

[push]
	default = simple

[pull]
	rebase = true

[init]
	defaultBranch = master
