#
# Read `man 5 sway-bar` for more information about this section.
bar {
	swaybar_command waybar
	#font pango:DejaVu Sans Mono 11
	#status_command i3status
	position bottom
	#colors {
	#	statusline #ffffff
	#	background #0f0f0f
	#	inactive_workspace #323232 #323232 #5c5c5c
	#}
}

